{
  "compilerOptions": {
    "allowJs": true,
    "target": "ES2015",
    "lib": ["ESNext"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationMap": true,
    "forceConsistentCasingInFileNames": true,
    //
    "rootDir": "./",
    "moduleResolution": "node",
    "module": "ESNext"
  },

  "include": ["src", "__tests__"],
  "exclude": ["src/@runtime"]
}
